<div class="container">
    <div class="row">
        <div class="col-12">

            <h2>Media :</h2>
            {{#if error_message}}
            <div class="alert alert-danger alert-dismissible fade show">
                <strong>Failure !</strong> {{error_message}}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            {{/if}}
            <form method="post" action="/media/edit/{{MediaTypeId}}">
                <div class="row mb-3">
                    <label for="inputName" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputName" placeholder="Name" name="$name" value="{{Name}}" />
                        <input type="hidden" class="form-control" id="inputId" placeholder="Name" name="$id" value="{{MediaTypeId}}" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">Edit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>