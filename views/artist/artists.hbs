<div class="container">
    <div class="row">
        <div class="col-sm-12">

            <h2>Artists</h2>
            {{#if message}}
            <div class="alert alert-success alert-dismissible fade show">
                <strong>Success!</strong> {{message}}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            {{/if}}
            {{#if error_message}}
            <div class="alert alert-danger alert-dismissible fade show">
                <strong>Failure!</strong> {{error_message}}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            {{/if}}

            <form method="get" action="/artists">
                <div class="row align-items-center g-3">
                    <div class="col-auto">
                        <label class="visually-hidden" for="inputName">Name</label>
                        <input type="text" class="form-control" id="inputName" name="n" placeholder="Name" value="{{n}}">
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </div>
            </form>

            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>NÂ°
                            <a href="/artists?o={{o}}&n={{n}}&or=ad"><i class="bi bi-arrow-down"></i></a>
                            <a href="/artists?o={{o}}&n={{n}}&or=au"><i class="bi bi-arrow-up"></i></a>
                        </th>
                        <th>
                            Name
                            <a href="/artists?o={{o}}&n={{n}}&or=nd"><i class="bi bi-arrow-down"></i></a>
                            <a href="/artists?o={{o}}&n={{n}}&or=nu"><i class="bi bi-arrow-up"></i></a>
                        </th>
                        <th class="text-end"><a href="/artist/add" class="btn btn-success"><i class="bi-plus-circle"></i> Add</a></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each rows}}
                    <tr>
                        <td>{{ArtistId}}</td>
                        <td>{{Name}}</td>
                        <td class="text-end">
                            <a href="/artist/{{ArtistId}}" class="btn btn-primary">
                                <i class="bi-pencil"></i> Edit
                            </a>
                        </td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>

            <nav>
                <ul class="pagination">
                    {{#each pages}}
                    <li class="page-item {{active}} {{disabled}}">
                        <a href="/artists?o={{offset}}&n={{../n}}&or={{../or}}" class="page-link">
                        {{name}}
                        </a>
                    </li>
                    {{/each}}
                </ul>
            </nav>

        </div>
    </div>
</div>